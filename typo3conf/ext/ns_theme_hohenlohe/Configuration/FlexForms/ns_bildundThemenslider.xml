<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Fields</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <backgroundColor>
                        <TCEforms>
                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.backgroundColor</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.white</numIndex>
                                        <numIndex index="1">white</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.yellow</numIndex>
                                        <numIndex index="1">yellow</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </backgroundColor>
                    <slider>
                        <title>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.addmore</title>
                        <section>1</section>
                        <type>array</type>
                        <el>
                            <container>
                                <type>array</type>
                                <title>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.slider</title>
                                <el>          
                                    <image>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.image</label>
                                            <config>
                                                <type>group</type>
                                                <internal_type>db</internal_type>
                                                <appearance>
                                                    <elementBrowserType>file</elementBrowserType>
                                                    <elementBrowserAllowed>gif,jpg,jpeg,png,svg</elementBrowserAllowed>
                                                </appearance>
                                                <allowed>sys_file</allowed>
                                                <size>1</size>
                                                <minitems>1</minitems>
                                                <maxitems>1</maxitems>
                                                <show_thumbs>1</show_thumbs>
                                            </config>
                                        </TCEforms>
                                    </image>
                                    <headline>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.headline</label>
                                            <config>
                                                <type>input</type>
                                                <size>50</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </headline>
                                    <text>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.text</label>
                                            <config>
                                                <type>text</type>
                                                <rows>5</rows>
                                                <cols>30</cols>
                                                <eval>trim</eval>
                                                <enableRichtext>1</enableRichtext>
                                            </config>
                                        </TCEforms>
                                    </text>
                                    <linkText>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.linkText</label>
                                            <config>
                                                <type>input</type>
                                                <size>50</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </linkText>
                                    <link>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.link</label>
                                            <config>
                                                <type>input</type>
                                                <renderType>inputLink</renderType>
                                                <size>50</size>
                                                <eval>trim</eval>
                                                <softref>typolink,typolink_tag,images,url</softref>
                                                <fieldControl>
                                                    <linkPopup>
                                                        <options>
                                                            <blindLinkOptions>folder</blindLinkOptions>
                                                        </options>
                                                    </linkPopup>
                                                </fieldControl>
                                            </config>
                                        </TCEforms>
                                    </link>
                                </el>
                            </container>
                        </el>
                    </slider>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>

<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Fields</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <overline>
                        <TCEforms>
                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.overline</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </overline>
                    <headline>
                        <TCEforms>
                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.headline</label>                            
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </headline>
                    <cateLink>
                        <TCEforms>
                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.cateLink</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </cateLink>  
                    <categories>
                        <title>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.categories</title>
                        <section>1</section>
                        <type>array</type>
                        <el>
                            <container>
                                <type>array</type>
                                <title>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.addmore</title>
                                <el>
                                    <image>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.image</label>
                                            <config>
                                                <type>group</type>
                                                <internal_type>db</internal_type>
                                                <appearance>
                                                    <elementBrowserType>file</elementBrowserType>
                                                    <elementBrowserAllowed>gif,jpg,jpeg,png,svg</elementBrowserAllowed>
                                                </appearance>
                                                <allowed>sys_file</allowed>
                                                <size>1</size>
                                                <minitems>1</minitems>
                                                <maxitems>1</maxitems>
                                                <show_thumbs>1</show_thumbs>
                                            </config>
                                        </TCEforms>
                                    </image>
                                    <name>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_theme_hohenlohe/Resources/Private/Language/locallang_flex.xlf:general.name</label>
                                            <config>
                                                <type>input</type>
                                                <size>50</size>
                                                <eval>trim, required</eval>
                                            </config>
                                        </TCEforms>
                                    </name>
                                    <categoryId>
                                        <TCEforms>
                                            <exclude>1</exclude>
                                            <label>Categories:</label>
                                            <config>
                                                <type>select</type>
                                                <renderType>selectSingle</renderType>
                                                <autoSizeMax>50</autoSizeMax>
                                                <foreign_table>sys_category</foreign_table>
                                                <foreign_table_where> AND {#sys_category}.{#sys_language_uid} IN (-1, 0) ORDER BY sys_category.sorting ASC</foreign_table_where>
                                                <minitems>1</minitems>
                                                <maxitems>9999</maxitems>
                                                <renderMode>tree</renderMode>
                                                <size>1</size>
                                                <treeConfig>
                                                    <appearance>
                                                        <expandAll>1</expandAll>
                                                        <showHeader>1</showHeader>
                                                    </appearance>
                                                    <parentField>parent</parentField>
                                                </treeConfig>
                                            </config>
                                        </TCEforms>
                                    </categoryId>                                                                      
                                </el>
                            </container>
                        </el>
                    </categories>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
